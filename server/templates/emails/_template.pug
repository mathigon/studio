mixin button(url, text)
  p(style="text-align: center; margin: 40px 0")
    a(href=url style="display: inline-block; color: #FFFFFF; text-decoration: none; background: #cd0e66; padding: 8px 20px; font-weight: bold; border-radius: 30px;")= text

doctype html
html
  head
    meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    meta(name="viewport" content="width=device-width")
    meta(http-equiv="X-UA-Compatible" content="IE=Edge")
    title
    style.
      p{margin:0 0 16px 0;padding:0}
      a{color:#0f82f2}

  body(style="margin:0px;padding:0px;-webkit-text-size-adjust:100%;-ms-text-size-adjust:100%;background:#ddd")
    span.preheader(style="color:transparent;display:none;height:0;max-height:0;max-width:0;opacity:0;overflow:hidden;mso-hide:all;visibility:hidden;width:0;")
      block preheader

    table(cellpadding=0 cellspacing=0 border=0 width="100%")
      tr: td(bgcolor="#181824" style="background:#ddd")
        table(width="100%" cellpadding=0 cellspacing=0 border=0 style="width:100%;max-width:600px;padding:0 20px;font-family:helvetica,arial,sans-serif;margin:0 auto" align="center")

          //- Header
          tr: td(align="center" style="padding:30px 0 20px 0;text-align:center")
            a(href="https://#{config.domain}")
              img(border=0 width=200 height=44 src="https://#{config.domain}#{config.header.logo}" alt=config.siteName)

          //- Body
          tr: td.body(bgcolor="#ffffff" style="background-color:#ffffff;border-radius:6px;box-shadow:1px 2px 6px #000000;font-size:16px;line-height:24px;padding:25px 20px 0 20px;")
            block body

          tr: td(width="100%" style="color:#ffffff;font-size:12px;line-height:20px;padding:0 0 50px 0;text-align:center;")
            p(style="margin:0") #[a(href=config.privacyPolicy) Privacy Policy] â€¢ #[a(href=config.termsOfService) Terms of Service]
            p(style="margin:0") This email was sent to #{user.fullName} at #{user.email}
            p(style="margin:0")= config.accounts.address
