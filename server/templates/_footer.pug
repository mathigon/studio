      if config.social.facebook
        a.footer-social(href=`https://www.facebook.com/${config.social.facebook.page}/` title="Facebook" target="_blank" rel="noopener")
          x-icon(name="facebook" size=20)
      if config.social.instagram
        a.footer-social(href=`https://www.instagram.com/${config.social.instagram.handle}/` title="Instagram" target="_blank" rel="noopener")
          x-icon(name="instagram" size=20)
      if config.social.youtube
        a.footer-social(href=`https://www.youtube.com/c/${config.social.youtube.channel}` title="YouTube" target="_blank" rel="noopener")
          x-icon(name="youtube" size=20)
