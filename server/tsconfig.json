{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es2016",
      "es2017.object",
      "es2017.string"
    ],
    "moduleResolution": "node",
    "strict": true,
    "types" : ["node"],
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "allowUmdGlobalAccess": true,
    "resolveJsonModule": true
  }
}
