{
  "extends": ["config:base"],
  "schedule": ["on the first day of the month"],
  "packageRules": [{
    "packagePatterns": ["^@mathigon"],
    "groupName": "Mathigon",
    "schedule": ["at any time"],
    "automerge": true
  }, {
    "packagePatterns": ["typescript", "tslib", "ts-node"],
    "groupName": "TypeScript",
    "automerge": true
  }, {
    "packagePatterns": ["^@typescript-eslint", "^eslint", "tape", "puppeteer"],
    "groupName": "Tests",
    "automerge": true
  }, {
    "packagePatterns": ["esbuild", "autoprefixer", "cssnano", "postcss", "sass", "rtlcss"],
    "groupName": "Build Tools",
    "automerge": true
  }, {
    "packagePatterns": ["^@google-cloud"],
    "groupName": "Google Cloud Tools",
    "automerge": true
  }, {
    "packagePatterns": ["^@types/"],
    "groupName": "Types",
    "automerge": true
  }, {
    "updateTypes": ["patch", "pin", "digest"],
    "groupName": "Versioning",
    "automerge": true
  }],
  "ignoreDeps": ["esbuild"]
}
