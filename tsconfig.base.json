{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2016",
      "es2017.object",
      "es2017.string"
    ],
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "allowUmdGlobalAccess": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"]
}
